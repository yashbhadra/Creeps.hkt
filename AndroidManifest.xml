<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.creeps.hkthn">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:launchMode="singleInstance"
        >
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <service android:name=".core_services.services.LocationService"
            />
        <meta-data
            android:name="com.google.android.awareness.API_KEY"
            android:value="@string/API_KEY"
            />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY"
            />


        <receiver android:name=".core_services.services.BroadcastListener"
            android:enabled="true"
            android:exported="true"
            android:label="creeps.BroadcastListener"
            >
            <intent-filter >
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="com.creeps.Hkthn.core_services.services.RestartService"/>
            </intent-filter>

        </receiver>

        <service android:name=".core_services.utils.firebase_services.FirebaseMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>
</manifest>